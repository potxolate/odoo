<!-- Vista de Socio -->
        <record model="ir.ui.view" id="tb_modulo.socio_list">
            <field name="name">tb_modulo.view.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='name']" position="after">
                    <field  name="paciente"/>
                </xpath> 
            </field>
        </record>


  <!-- Vista de Variedad -->

    <record model="ir.ui.view" id="tb_modulo.strain_list">
      <field name="name">tb_modulo.view.tree</field>
      <field name="model">tb_modulo.strain</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="semanas"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>

 <!-- Vista de Bancos -->

    <record model="ir.ui.view" id="tb_modulo.bank_list">
      <field name="name">tb_modulo.view.tree</field>
      <field name="model">tb_modulo.bank</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

 <!-- Acciones del MenÃº -->

    
    
    <record model="ir.actions.act_window" id="tb_modulo.socio_action_window">
      <field name="name">Socios</field>
      <field name="res_model">tb_modulo.socio</field>
      <field name="view_mode">tree,form</field>
    </record>    
    
    <record model="ir.actions.act_window" id="tb_modulo.strain_action_window">
      <field name="name">Variedades</field>
      <field name="res_model">tb_modulo.strain</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="tb_modulo.bank_action_window">
      <field name="name">Bancos</field>
      <field name="res_model">tb_modulo.bank</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="tb_modulo" id="tb_modulo.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Socios" id="tb_modulo.socios_menu" parent="tb_modulo.menu_root" action="tb_modulo.socio_action_window"/>
