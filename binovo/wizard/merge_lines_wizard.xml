<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <record id="merge_lines_wizard_view_form" model="ir.ui.view">        
        <field name="name">merge.lines.wizard.form</field>        
        <field name="model">merge.lines.wizard</field>        
        <field name="arch" type="xml">                      
            <form string="Order Lines">                              
                <group class="oe_title">                    
                    <field name="order_id"/>
                    <field name="order_line" widget="many2many_tags"/>                
                    <field name="product_id" />
                </group>
                <footer>
                    <button string="Unir" class="btn-primary" type="object" name="merge_lines"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>                    
                </footer>
            </form>        
        </field>    
    </record>  
</odoo>