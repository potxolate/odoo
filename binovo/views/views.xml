<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="blog_inherit_form_view" model="ir.ui.view">
            <field name="name">blog.inherit.form.view</field>
            <field name="model">blog.blog</field>
            <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="company_id"/>
                </xpath>                                              
            </field>            
      </record>
      <record id="post_inherit_form_view" model="ir.ui.view">
            <field name="name">post.inherit.form.view</field>
            <field name="model">blog.post</field>
            <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="company_id"/>
                </xpath>                                              
            </field>            
      </record>
      <record id="sale_order_inherit_form_view" model="ir.ui.view">
            <field name="name">sale.order.inherit.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="create_wizard" string="Create Wizard" class="oe_highlight" type="object"/>                    
                </header>
            </field>            
      </record>
     <record id="test_model_wizard_view_form" model="ir.ui.view">
        	<field name="name">test.model.wizard.form</field>
        	<field name="model">test.model.wizard</field>
        	<field name="arch" type="xml">
            	<form string="Test">
                	<group class="oe_title">
                    	<field name="test_field"/>
                	</group>
                    <footer>
                        <button name="action_done" string="Submit" type="object" class="btn-primary"/>
                    </footer>
                </form>
                
        	</field>
    	</record>
    	<record id="test_model_wizard_action" model="ir.actions.act_window">
        	<field name="name">Test Model Wizard</field>
        	<field name="type">ir.actions.act_window</field>
        	<field name="res_model">test.model.wizard</field>
        	<field name="view_mode">form</field>
        	<field name="view_id" ref="test_model_wizard_view_form"/>
        	<field name="target">new</field>
    	</record>
    
      <record id="lead_inherit_form_view" model="ir.ui.view">
            <field name="name">lead.inherit.form.view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="fuente"/>
                </xpath>                                              
            </field>            
      </record>
      
